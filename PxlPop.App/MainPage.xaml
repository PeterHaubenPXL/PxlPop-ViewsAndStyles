<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="PxlPop.App.MainPage"
             Title="Pxlpop festival">

    <ScrollView>
        <VerticalStackLayout>
            <Image 
                Source="pxl_icon.png"
                Aspect="AspectFit" 
                HeightRequest="340" 
                HorizontalOptions="Center"
                Shadow="green 5 5"/>
            <Border 
                Stroke="{AppThemeBinding Light=LightGray, Dark=DimGray}"
                StrokeShape="RoundRectangle 12"
                Padding="5">
                <Button 
                    Text="Line-up"/>
            </Border>
            <Border>
                <Button 
                    Text="Info">
                </Button>
            </Border>
            <Border>
                <Button 
                    Text="Favorieten">
                </Button>
            </Border>
            <Border>
                <Button 
                    Text="Tickets">
                </Button>
            </Border>
            <Border>
                <Button 
                    Text="Account">
                </Button>
            </Border>
        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
