<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Labo4_PxlPop.Pages.LineupPage" 
             xmlns:views="clr-namespace:Labo4_PxlPop.Views"
             Title="Line up page"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Spacing="0">
        <views:HeaderView Title="Line-up" />

        <!-- Rest van je page inhoud -->
        <Picker x:Name="myPicker"
            Title="Selecteer department"
            SelectedIndexChanged="Picker_SelectedIndexChanged"
            Margin="30">
            <Picker.Items>
                <x:String>Businesss</x:String>
                <x:String>Education</x:String>
                <x:String>Healthcare</x:String>
                <x:String>Digital</x:String>
                <x:String>Media &amp; Tourism</x:String>
                <x:String>People &amp; Society</x:String>
                <x:String>Green &amp; Tech</x:String>
                <x:String>Music</x:String>
                <x:String>MAD</x:String>
            </Picker.Items>
        </Picker>

    </VerticalStackLayout>
</ContentPage>