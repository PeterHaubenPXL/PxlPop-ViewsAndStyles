<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Labo4_PxlPop.Pages.OrderPage"
             xmlns:views="clr-namespace:Labo4_PxlPop.Views"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             Title="OrderPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <views:HeaderView Title="Bestellingen" Grid.Row="0" />

        <ScrollView Grid.Row="1" >
            <VerticalStackLayout Spacing="10" Padding="30,10">
                <Label 
                    Text="Gegevens"
                    Style="{StaticResource LabelTitle}"></Label>
                <BoxView 
                    HeightRequest="3"
                    Color="#58A518" />

                <Label Text="Voornaam*"></Label>
                <Entry></Entry>
                <Label Text="Achternaam*"></Label>
                <Entry></Entry>
                <Label Text="GSM* of Telefoonnummer*"></Label>
                <Entry></Entry>
                <Label Text="E-mail*"></Label>
                <Entry Placeholder="wim.bervoets@pxl.be"
                       PlaceholderColor="LightGreen"></Entry>
                <HorizontalStackLayout>
                    <CheckBox
                        HorizontalOptions="Start"></CheckBox>
                    <Label 
                        Text="Verstuur tickets via email"
                        VerticalOptions="Center"
                        TextColor="{StaticResource Primary}"></Label>
                </HorizontalStackLayout>
                
                <Label
                    Text="Levering"
                    Style="{StaticResource LabelTitle}"></Label>
                <BoxView 
                    HeightRequest="3"
                    Color="#58A518" />
                <Label>Leverdatum</Label>
            </VerticalStackLayout>
            
        </ScrollView>

        <Button 
            Grid.Row="2"
            mi:MauiIcon.Value="{mi:FontAwesomeSolid Icon=CreditCard}"
            Style="{StaticResource NavigationButtonStyle}"
            Text="Betalen"
            x:Name="PayButton"
            Clicked="PayButton_Clicked"
            Margin="0,50,0,10"></Button>
    </Grid>
</ContentPage>